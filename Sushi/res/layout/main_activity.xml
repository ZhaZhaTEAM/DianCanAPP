<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- scaleType="fitXY"： 填充xy -->

    <ImageView
        android:id="@+id/background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/denglu8" />

    <!-- sign in -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp" >

        <TextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="@string/signin"
            android:textSize="40sp"
            android:typeface="serif" />
    </RelativeLayout>





    <LinearLayout
        android:id="@+id/userlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="54dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/usernameimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/yonghu" />

        <EditText
            android:id="@+id/usernametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textSize="20dp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passlinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userlinearLayout"
        android:layout_marginTop="27dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/passwordimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mima" />

        <EditText
            android:id="@+id/passwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:password="true"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passlinearLayout"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/login"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:text="@string/login"
            android:width="100sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/register"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/login"
            android:layout_toRightOf="@+id/login"
            android:text="@string/register"
            android:width="100sp"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>